{
	"name": "@iconify/core",
	"type": "module",
	"description": "Reusable files used by multiple Iconify packages",
	"author": "Vjacheslav Trushkin <cyberalien@gmail.com> (https://iconify.design)",
	"version": "4.0.0",
	"license": "MIT",
	"bugs": "https://github.com/iconify/iconify/issues",
	"homepage": "https://iconify.design/",
	"repository": {
		"type": "git",
		"url": "https://github.com/iconify/iconify.git",
		"directory": "packages/core"
	},
	"scripts": {
		"clean": "rimraf lib tsconfig.tsbuildinfo",
		"lint": "eslint --fix src/**/*.ts",
		"prebuild": "pnpm run lint && pnpm run clean",
		"build": "tsdown src/*.ts src/*/*.ts src/*/*/*.ts --dts --format esm -d lib",
		"test": "vitest"
	},
	"sideEffects": false,
	"exports": {
		"./*": "./*",
		"./lib/api/callbacks": "./lib/api/callbacks.js",
		"./lib/api/config": "./lib/api/config.js",
		"./lib/api/functions": "./lib/api/functions.js",
		"./lib/api/icons": "./lib/api/icons.js",
		"./lib/api/loaders": "./lib/api/loaders.js",
		"./lib/api/modules": "./lib/api/modules.js",
		"./lib/api/modules/fetch": "./lib/api/modules/fetch.js",
		"./lib/api/modules/mock": "./lib/api/modules/mock.js",
		"./lib/api/query": "./lib/api/query.js",
		"./lib/api/types": "./lib/api/types.js",
		"./lib/builder/functions": "./lib/builder/functions.js",
		"./lib/icon/list": "./lib/icon/list.js",
		"./lib/icon/sort": "./lib/icon/sort.js",
		"./lib/storage/functions": "./lib/storage/functions.js",
		"./lib/storage/storage": "./lib/storage/storage.js"
	},
	"dependencies": {
		"@iconify/api-redundancy": "workspace:^",
		"@iconify/types": "workspace:^",
		"@iconify/utils": "workspace:^"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.25.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^18.19.87",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"eslint": "^9.25.1",
		"globals": "^15.15.0",
		"rimraf": "^6.0.1",
		"tsdown": "^0.13.0",
		"typescript": "^5.8.3",
		"vitest": "^2.1.9"
	}
}
