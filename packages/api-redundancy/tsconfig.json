{
	"include": ["./src/*.ts", "./tests/*.ts", ".eslintrc.js"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	}
}
